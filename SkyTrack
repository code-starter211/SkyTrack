    document.getElementById('trackingForm').addEventListener('submit', function(e) {  
        e.preventDefault();  
          
        const pnr = document.getElementById('pnr').value.toUpperCase();  
        const lastName = document.getElementById('lastName').value.toUpperCase();  
        const searchKey = `${pnr}-${lastName}`;  
          
        const errorMessage = document.getElementById('errorMessage');  
        const resultsSection = document.querySelector('.results-section');  
          
        if (flightDatabase[searchKey]) {  
            // Hide error message  
            errorMessage.style.display = 'none';  
              
            // Display flight results  
            displayFlightResults(flightDatabase[searchKey]);  
              
            // Scroll to results  
            resultsSection.style.display = 'block';  
            setTimeout(() => {  
                resultsSection.scrollIntoView({ behavior: 'smooth', block: 'start' });  
            }, 100);  
        } else {  
            // Show error message  
            errorMessage.style.display = 'block';  
            resultsSection.style.display = 'none';  
        }  
    });  

function displayFlightResults(flight) {
    const statusClass = `status-${flight.status.toLowerCase()}`;
    const statusText = flight.status.toLowerCase() === 'ontime' ? 'On Time' :
                       flight.status.toLowerCase() === 'delayed' ? 'Delayed' :
                       flight.status.toLowerCase() === 'canceled' ? 'Canceled' : 'Unknown';

    const flightCard = document.getElementById('flightCard');

    // If flight has segments (layover), display each segment
    if (flight.segments && Array.isArray(flight.segments)) {
        let segmentsHtml = '';
        flight.segments.forEach((segment, idx) => {
            segmentsHtml += `
                <div class="flight-segment">
                    <div class="flight-route">  
                        <div class="airport-info">  
                            <div class="airport-code">${segment.departure.airport}</div>  
                            <div class="airport-name">${segment.departure.city}</div>  
                            <div class="time">${segment.departure.time}</div>  
                        </div>  
                        <div class="flight-path">  
                            <div class="plane-icon">‚úàÔ∏è</div>  
                            <div class="dotted-line"></div>  
                            <div class="duration">${segment.duration || ''}</div>  
                        </div>  
                        <div class="airport-info">  
                            <div class="airport-code">${segment.arrival.airport}</div>  
                            <div class="airport-name">${segment.arrival.city}</div>  
                            <div class="time">${segment.arrival.time}</div>  
                        </div>  
                    </div>  
                    <div class="flight-details">  
                        <div class="detail-item">  
                            <div class="detail-label">Gate</div>  
                            <div class="detail-value">${segment.gate || '-'}</div>  
                        </div>  
                        <div class="detail-item">  
                            <div class="detail-label">Terminal</div>  
                            <div class="detail-value">${segment.terminal || '-'}</div>  
                        </div>  
                        <div class="detail-item">  
                            <div class="detail-label">Aircraft</div>  
                            <div class="detail-value">${segment.aircraft || '-'}</div>  
                        </div>  
                    </div>
                    ${idx < flight.segments.length - 1 ? `<hr style="margin:1rem 0; border-top: 1px dotted #ccc;">` : ''}
                </div>
            `;
        });

        flightCard.innerHTML = `
            <div class="flight-header">  
                <div>  
                    <div class="flight-number">${flight.flightNumber || 'Multiple Segments'}</div>  
                    <div style="color: #666; margin-top: 0.3rem;">${flight.airline}</div>  
                </div>  
                <div class="status-badge ${statusClass}">${statusText}</div>  
            </div>
            ${segmentsHtml}
            <div class="flight-details" style="margin-top: 1rem; border-top: 2px solid #f0f0f0; padding-top: 1rem;">
                <div class="detail-item">  
                    <div class="detail-label">Duration</div>  
                    <div class="detail-value">${flight.duration}</div>  
                </div>  
                <div class="detail-item">  
                    <div class="detail-label">Price</div>  
                    <div class="detail-value">${flight.price}</div>  
                </div>  
            </div>
        `;
    } else {
        // Existing single segment display for flights without layovers
        flightCard.innerHTML = `  
            <div class="flight-header">  
                <div>  
                    <div class="flight-number">${flight.flightNumber}</div>  
                    <div style="color: #666; margin-top: 0.3rem;">${flight.airline}</div>  
                </div>  
                <div class="status-badge ${statusClass}">${statusText}</div>  
            </div>  
              
            <div class="flight-route">  
                <div class="airport-info">  
                    <div class="airport-code">${flight.departure.airport}</div>  
                    <div class="airport-name">${flight.departure.city}</div>  
                    <div class="time">${flight.departure.time}</div>  
                </div>  
                  
                <div class="flight-path">  
                    <div class="plane-icon">‚úàÔ∏è</div>  
                    <div class="dotted-line"></div>  
                    <div class="duration">${flight.duration}</div>  
                </div>  
                  
                <div class="airport-info">  
                    <div class="airport-code">${flight.arrival.airport}</div>  
                    <div class="airport-name">${flight.arrival.city}</div>  
                    <div class="time">${flight.arrival.time}</div>  
                </div>  
            </div>  
              
            <div class="flight-details">  
                <div class="detail-item">  
                    <div class="detail-label">Gate</div>  
                    <div class="detail-value">${flight.gate}</div>  
                </div>  
                <div class="detail-item">  
                    <div class="detail-label">Terminal</div>  
                    <div class="detail-value">${flight.terminal}</div>  
                </div>  
                <div class="detail-item">  
                    <div class="detail-label">Aircraft</div>  
                    <div class="detail-value">${flight.aircraft}</div>  
                </div>  
                <div class="detail-item">  
                    <div class="detail-label">Price</div>  
                    <div class="detail-value">${flight.price}</div>  
                </div>  
            </div>  
        `;
    }
}

    // Contact form handler  
    document.getElementById('contactForm').addEventListener('submit', function(e) {  
        e.preventDefault();  
        alert('Thank you for your message! We will get back to you soon.');  
        this.reset();  
    });  

    // Smooth scrolling for navigation links  
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {  
        anchor.addEventListener('click', function (e) {  
            e.preventDefault();  
            const target = document.querySelector(this.getAttribute('href'));  
            if (target) {  
                target.scrollIntoView({ behavior: 'smooth' });  
            }  
        });  
    });  
</script>

</body>  
</html>
